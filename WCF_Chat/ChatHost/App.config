<?xml version="1.0" encoding="utf-8" ?>
<configuration>
    <startup> 
        <supportedRuntime version="v4.0" sku=".NETFramework,Version=v4.6.1" />
    </startup>

    <system.serviceModel>
      <behaviors>
        <serviceBehaviors>
          <behavior name="mexBehavior">
            <serviceMetadata httpGetEnabled="true" httpsGetEnabled="true" />
            <serviceDebug includeExceptionDetailInFaults="true" />
          </behavior>
        </serviceBehaviors>
      </behaviors>
      <services>
        <service name="WCF_Chat.ChatService" behaviorConfiguration="mexBehavior">
          <endpoint address="" binding="netTcpBinding" contract="WCF_Chat.IChatService" />
          <endpoint address="mex" binding="mexHttpBinding" contract="IMetadataExchange" />
          <host>
            <baseAddresses>
              <add baseAddress="http://localhost:8306" />
              <add baseAddress="net.tcp://localhost:8307" />
            </baseAddresses>
          </host>
        </service>
      </services>
    </system.serviceModel>
</configuration>